[hytale]
enabled = true
filter = hytale
logpath = /var/log/hytale/*.log
# UDP port for Hytale
port = 5520
protocol = udp
# Ban time in seconds (1 hour)
bantime = 3600
# Time window to count failures (10 minutes)
findtime = 600
# Number of failures before ban
maxretry = 5
# Use iptables for UDP
banaction = iptables-allports[protocol=udp]
